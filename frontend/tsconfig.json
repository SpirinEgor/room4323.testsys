{
	"compilerOptions": {
	    "rootDir": "./src/",
	    "outDir": "./build/",
	    "target": "es2016",
	    "module": "commonjs",
	    "moduleResolution": "node",
	    "sourceMap": true,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "noImplicitAny": true,
	    "suppressImplicitAnyIndexErrors": true,
	    "lib": [ "es2015", "dom", "es2016" ],
	    "typeRoots": [
	    	"node_modules/@types"
    	]
	}
}
